<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="NBP" transaction-type="RESOURCE_LOCAL">
        <class>com.kzawilski.database.domain.ExchangeRate</class>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/nbp"/>
            <property name="javax.persistence.jdbc.user" value="nbp"/>
            <property name="javax.persistence.jdbc.password" value="nbp"/>
        </properties>
    </persistence-unit>
</persistence>