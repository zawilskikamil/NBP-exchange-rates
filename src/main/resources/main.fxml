<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ScrollPane?>
<BorderPane fx:controller="com.kzawilski.controllers.MainController"
            xmlns:fx="http://javafx.com/fxml">
    <left>
        <GridPane>
            <Button GridPane.rowIndex="0" text="Download" onAction="#openDownloadDialog"/>
            <DatePicker GridPane.rowIndex="1" fx:id="fromDatePicker"/>
            <DatePicker GridPane.rowIndex="2" fx:id="toDatePicker"/>
            <ListView GridPane.rowIndex="3" maxWidth="100.0" fx:id="codesSelect"/>
        </GridPane>
    </left>
    <center>
        <ScrollPane fx:id="chartPane">
            <LineChart fx:id="chart">
                <xAxis>
                    <CategoryAxis side="BOTTOM" />
                </xAxis>
                <yAxis>
                    <NumberAxis side="LEFT" />
                </yAxis>
            </LineChart>
        </ScrollPane>
    </center>
    <right>
        <Button text="Refresh" onAction="#refresh"/>
    </right>
</BorderPane>